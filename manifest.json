{
    "manifest_version": 3,
    "name": "Remove VoiceTube Ads",
    "version": "1.0",
    "description": "去除 VoiceTube 每次載入頁面的廣告",
    "content_scripts": [
      {
        "matches": ["https://tw.voicetube.com/videos/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "128": "/icon.png", 
      "16": "/icon.png",
      "48": "/icon.png"
   },
    "permissions": ["activeTab", "tabs"]
  }